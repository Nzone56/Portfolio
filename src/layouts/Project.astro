---
export interface Props {
   title: string
   body: string
   chars: { title: string; body: string }[]
   githref: string
   pagehref: string
   src: string
}

const { title, body, githref, pagehref, src, chars } = Astro.props
---

<div class="flex text-cyan-600 text-lg">
   <picture
      id="image-project"
      class="m-16 w-1/2 border-darkTeal items-center opacity-0"
   >
      <img
         src=`assets/img/Projects/${src}/first.png`
         alt="CYL Prev image"
         class="block w-full h-full object-cover"
         style={{ boxShadow: 'rgba(0, 0, 0, 0.35) 0px 5px 15px' }}
      /></picture
   >
   <div id="content-project" class="w-1/2 opacity-0">
      <h2 class="m-8 text-4xl font-bold">{title}</h2>
      <p class="m-8 text-justify">{body}</p>
      <ul class="m-8">
         {
            chars.map((char) => {
               return (
                  <li class="mb-2">
                     <span class="font-bold">{char.title}:</span> {char.body}
                  </li>
               )
            })
         }
      </ul>
      <div class="flex justify-center m-8">
         <a
            target="_blank"
            href={pagehref}
            class="m-4 p-4 border-2 bg-gradient-to-r from-turquoise via-cyan-600 to-blue-900 text-white hover:bg-cyan-600 rounded-md transition duration-500 hover:scale-110"
         >
            VISIT WEBSITE</a
         >
         <a
            target="_blank"
            href={githref}
            class="m-4 p-4 border-2 border-cyan-600 hover:text-white hover:bg-cyan-600 rounded-md transition duration-500 hover:scale-110"
         >
            GITHUB REPO</a
         >
      </div>
   </div>
</div>
