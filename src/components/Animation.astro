---
import Header from '../components/Header.astro'
---

<div
   class="animate-header flex px-8 py-6 items-center justify-between fixed top-0 w-full bg-transparent z-10"
>
   <Header />
</div>

<div>
   <!--  AFTER -->
   <section
      id="banner"
      class="absolute top-0 left-0 h-full w-full opacity-90 bg-black z-1"
   >
      <div class="flex items-center justify-center h-full relative z-10">
         <picture class="animate-photoIcon p-20">
            <img
               src="../../src/assets/img/me/Photo1.jpg"
               alt="Photo of me"
               class="portrait block rounded-full"
            />
         </picture>
         <div class="inline-block m-16">
            <h3 class="animate-hi p-2 text-lg text-turquoise">
               Hi, my name is
            </h3>
            <h2 class="animate-hi text-6xl p-2">Julian Pereira</h2>
            <div>
               <h2
                  class="animate-hi inline-block font-bold bg-gradient-to-r from-turquoise via-cyan-600 to-cyan-600 text-transparent bg-clip-text text-5xl p-2"
               >
                  I'm a
               </h2>
               <h2
                  class="animate-ticBefore inline-block font-bold bg-gradient-to-r from-cyan-600 via-cyan-600 to-blue-900 text-transparent bg-clip-text text-5xl p-2 pl-0 border-r-4 border-white"
               >
                  Fronted Developer
               </h2>
            </div>
         </div>
      </div>
      <picture class="animate-bg absolute bottom-10 right-0 opacity-70 z-0">
         <img
            src="../../src/assets/img/Landing/smoke.png"
            alt="Photo of me"
            class="block w-full"
         />
      </picture>
   </section>
   <!--  BEFORE -->
   <section
      class="relative top-0 left-0 w-full h-screen animate-test flex flex-row items-center justify-center z-0"
   >
      <picture class="m-8 w-28 h-28 opacity-0">
         <img
            src="../../src/assets/img/me/Photo1.jpg"
            alt="Photo of me"
            class="portrait-intro inline-block rounded-full opacity"
         />
      </picture>
      <div>
         <h2
            class="inline-block text-4xl animate-typingtic whitespace-nowrap border-r-4 border-white overflow-hidden"
         >
            <span> Julian Pereira</span> | Frontend Developer
         </h2>
      </div>
   </section>
</div>
